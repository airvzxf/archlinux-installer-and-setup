<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="system-menu" label="System">
  <item label="Openbox Configuration Manager">
    <action name="Execute">
      <command>obconf</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <separator />
  <item label="Reconfigure Openbox">
    <action name="Reconfigure" />
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <item label="Tmux - Terminal">
    <action name="Execute">
      <command>xterm -fullscreen -T "TMux" tmux</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Xterm - Terminal">
    <action name="Execute">
      <command>xterm -fullscreen -T "XTerm"</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <separator />
  <item label="Geany - Editor">
    <action name="Execute">
      <command>geany</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <separator />
  <item label="Firefox - Web browser">
    <action name="Execute">
      <command>firefox</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Chromium - Web browser">
    <action name="Execute">
      <command>chromium</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <separator />
  <menu id="system-menu"/>
  <separator />
  <item label="Power off">
    <action name="Execute">
      <command>sudo poweroff</command>
      <prompt>Reboot?</prompt>
    </action>
  </item>
  <item label="Reboot">
    <action name="Execute">
      <command>sudo reboot</command>
      <prompt>Shutdown?</prompt>
    </action>
  </item>
  <item label="Log Out">
    <action name="Exit">
      <prompt>no</prompt>
    </action>
  </item>
</menu>

</openbox_menu>
